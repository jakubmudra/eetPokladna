<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <h1>Add product</h1>

            <form method="POST">
                <input type="hidden" name="id" value="{{ product.id }}" />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Product name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name"  value="{{ product.name }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Product price</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control"  placeholder="Price" name="price" step="0.01" min="0" value="{{ product.price }}"  >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Product visibility</label>
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="visibility" id="inlineRadio1" value="1" checked>
                            <label class="form-check-label" for="inlineRadio1">Show</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="visibility" id="inlineRadio2" value="0">
                            <label class="form-check-label" for="inlineRadio2">Hide</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Product type</label>
                    <div class="col-sm-10">
                        <select name="type" class="form-control w-50">
                            {% for type in types %}
                                {% set selected = '' %}
                                {% if (type[0]) == product.type %}
                                    {% set selected = 'selected' %}
                                {% endif %}
                                <option value="{{ type["id"] }}" {{ selected }}>{{ type["name"] }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary my-1">Add</button>
            </form>
        </div>
    </div>
</div>