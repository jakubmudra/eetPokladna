<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <h1>Stock List</h1>
            <p class="text-right">Showing {{ items|length }} products in stock</p>
            <a href="/stocktaking/{{ stockId }}/edit">Naskladneni</a>
            <a href="/stocktaking/{{ stockId }}/print" target="_blank">Tisk sestavy</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        {{ include('stock/stockTaking-single.twig') }}
                    {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
</div>