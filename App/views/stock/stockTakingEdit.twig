<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <h1>Stock List</h1>
            <p class="text-right">Showing {{ items|length }} products in stock</p>
            <form method="post">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="stock">

                        {% set edit = true %}
                        {% for item in items %}
                            {{ include('stock/stockTaking-single.twig') }}
                        {% endfor %}

                        {% if allProducts|length > 0 %}
                        <tr>
                            <td colspan="2">
                                <select name="addProductId" class="form-control w-50">
                                    {% for product in allProducts %}
                                        <option value="{{ product[0] }}">{{ product|join(' - ') }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td colspan="3" class="text-right">
                                <input type="submit" value="Add product to stock" class="btn btn-info" id="add" name="addProduct" />
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>



                <button type="submit" name="submit" class="btn btn-primary my-1">Save</button>
            </form>
        </div>
    </div>
</div>